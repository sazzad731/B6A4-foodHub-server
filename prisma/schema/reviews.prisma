model Reviews {
  id            String       @id @default(uuid())

  customerId    String
  customer      User         @relation(fields: [customerId], references: [id])

  mealId        String
  meal          Meals        @relation(fields: [mealId], references: [id])

  rating        Float
  content       String?
  createdAt     DateTime     @default(now())
  updatedAt     DateTime     @updatedAt

  @@map("reviews")
}
